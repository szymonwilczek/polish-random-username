{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
